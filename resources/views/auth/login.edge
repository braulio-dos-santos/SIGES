@if(flashMessages.has('notification'))
<div id="notification" class="notification">
  {{ flashMessages.get('notification') }}
</div>
@endif

<style>
  .notification {
    background-color: #ffcc00;
    color: #333;
    padding: 10px;
    border-radius: 5px;
    text-align: center;
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 9999;
    opacity: 1;
    transition: opacity 0.5s;
  }

  .notification.hidden {
    opacity: 0;
  }
</style>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(document).ready(function () {
              if ($('#notification').length) {
                // Wait for 5 seconds, then fade out and remove the notification
                setTimeout(function () {
                  $('#notification').addClass('hidden');
                  setTimeout(function () {
                    $('#notification').remove();
                  }, 500); // This delay should match the CSS transition time (0.5s)
                }, 5000); // 5 seconds
              }
            });
</script>



</script>



